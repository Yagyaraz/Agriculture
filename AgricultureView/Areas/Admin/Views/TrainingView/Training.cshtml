@model IEnumerable<TrainingViewModel>
@{
    ViewData["Title"] = "Training";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateTraining" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">तालिम सूची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>शिर्षक</th>
                                    <th>सुरु मिति</th>
                                    <th>अन्तिम मिति</th>
                                    <th>प्रशिक्षक</th>
                                    <th>प्रीमियम प्रकार/ तालिम शुल्क</th>
                                    <th>स्थान</th>
                                    <th>प्रशिक्षण प्रकार</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TrainerName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PremiumName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TrainingPlace)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TrainingTypeName)</td>
                                        <td>
                                            <a asp-action="CreateTraining" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
                                        </td>
                                        <td>
                                            <a asp-action="TrainingDetail" asp-route-id="@item.Id"><i class="fa fa-file" aria-hidden="true"></i>Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
