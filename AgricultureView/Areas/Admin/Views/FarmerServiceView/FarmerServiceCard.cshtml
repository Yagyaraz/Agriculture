@using AgricultureView.Constants
@model IEnumerable<FarmerServiceCardViewModel>

@{
    ViewData["Title"] = "FarmerServiceCard";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateFarmerServiceCard" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; थप्नुहोस</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">किसान सेवा कार्ड सुची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>सेवा लिएको मिति</th>
                                    <th>प्रकार</th>
                                    <th>किसान सेवा</th>
                                    <th>आर्थिक वर्ष</th>
                                    <th>किसानको नाम</th>
                                    <th>ठेगाना</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TypeName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FiscalYearName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerAddress)</td>
                                        <td class="text-center d-flex justify-content-between" style="width: 50px; height: 50px;">
                                            <a asp-action="CreateFarmerServiceCard" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>
                                        
                                            <a asp-action="PrintFarmerServiceCard" title="Detail" asp-route-id="@item.Id"><i class="fa fa-file-alt" aria-hidden="true"></i></a>

                                            <form asp-area=""
                                                  asp-controller="AjaxMVC"
                                                  asp-action="Delete"
                                                  asp-route-table="@TableNameConstants.FarmerServiceCard"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                <button type="submit" class="btn btn-link">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
