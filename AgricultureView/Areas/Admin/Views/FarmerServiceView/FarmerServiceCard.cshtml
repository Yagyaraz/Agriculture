@model IEnumerable<FarmerServiceCardViewModel>

@{
    ViewData["Title"] = "FarmerServiceCard";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateFarmerServiceCard" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; थप्नुहोस</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">किसान सेवा कार्ड सुची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>सेवा लिएको मिति</th>
                                    <th>प्रकार</th>
                                    <th>किसान सेवा</th>
                                    <th>आर्थिक वर्ष</th>
                                    <th>किसानको नाम</th>
                                    <th>ठेगाना</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TypeName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FiscalYearName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerAddress)</td>
                                        <td>
                                            <a asp-action="CreateFarmerServiceCard" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
