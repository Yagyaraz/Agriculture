@using HtmlHelpers.BeginCollectionItemCore
@model FarmerServiceCardDetailViewModel
@{
    ViewData["Title"] = "_FarmerServiceCardDetail";
}

<tr class="newRow">
    @using (Html.BeginCollectionItem("FarmerServiceCardDetailList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="FarmerServiceCardId" type="hidden" />
            <select asp-for="TypeId" asp-items="await _Utility.GetAgriSectorSelectListItems()" onchange="UpdateType(this)" class="form-select form-control TypeId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="ServiceId" asp-items="await _Utility.GetAgriServiceSelectListItems(Model.TypeId)" class="form-select form-control ServiceId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="ServiceId" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="UnitId" asp-items="await _Utility.GetMeasuringUnitSelectListItems()" class="form-select form-control ProductId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="UnitId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </td>
        <td>
            <textarea asp-for="Detail"></textarea>
            <span asp-validation-for="Detail" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>