
@model LibraryDetailViewModel

@{
    ViewData["Title"] = "Library Detail";
}

<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">पुस्तकालय - ज्ञान </h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-area="Admin" asp-controller="LibraryView" asp-action="Library">Library List</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Library Details</a>
            </li>
        </ul>
    </div>
    <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">पुस्तकालय </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                <strong>प्रकार:</strong>
                                @Model.TypeName
                                </div>

                            </div>
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                <strong>शिर्षक:</strong>
                                @Model.Title
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <strong>विवरण:</strong>
                                    <div class="p-2 Details-file">
                                        @Html.Raw(Model.Description)
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-4 p-0">
                                <div class="form-group">
                                <strong>फोटो:</strong>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.FilePhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                    <a asp-area="Admin" asp-controller="LibraryView" asp-action="Library" class="btn btn-primary">सूचीमा फर्कनुहोस्</a>
                    </div>
                </div>
            </div>
    </div>
</div>