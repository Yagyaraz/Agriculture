@using HtmlHelpers.BeginCollectionItemCore
@model SilkCropsViewModel
@{
    ViewData["Title"] = "_SilkCrops";
}

<tr class="new">
    @using (Html.BeginCollectionItem("SilkCropsViewModelList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="CropsInformationId" type="hidden" />
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="SilkTypeId" asp-items="await _Utility.GetSilkTypeSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="SilkTypeId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="TotalCount" class="form-control" />
            <span asp-validation-for="TotalCount" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>