@using HtmlHelpers.BeginCollectionItemCore
@model FamilyDetailsInvolvedInAgriViewModel

@{
    ViewData["Title"] = "_AgricultureInvolvedDetail";
}

<tr class="new">
    @using (Html.BeginCollectionItem("FamilyDetailInvolveList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="FamilyDetailsId" type="hidden" />
            <select asp-for="RelationId" asp-items="await _Utility.GetRelationSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="RelationId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="Age" min="0" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="GenderId" asp-items="await _Utility.GetGenderSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="GenderId" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="WorkingAreaId" asp-items="await _Utility.GetWorkingAreaSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="WorkingAreaId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="CitizenNo" class="form-control" />
            <span asp-validation-for="CitizenNo" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="PhoneNumbar" class="form-control" />
            <span asp-validation-for="PhoneNumbar" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>