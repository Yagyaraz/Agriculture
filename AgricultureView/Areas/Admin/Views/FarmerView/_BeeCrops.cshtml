@using HtmlHelpers.BeginCollectionItemCore
@model BeeCropsViewModel
@{
    ViewData["Title"] = "_BeeCrops";
}

<tr class="new">
    @using (Html.BeginCollectionItem("BeeCropsViewModelList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="CropsInformationId" type="hidden" />
            <select asp-for="BeeTypeId" asp-items="await _Utility.GetBeeTypeSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="BeeTypeId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="TotalCount" class="form-control" />
            <span asp-validation-for="TotalCount" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>