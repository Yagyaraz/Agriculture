                                            <thead>
                                                <tr>
                                                    <th>बालीको नाम</th>
                                                    <th>क्षेत्रफल</th>
                                                    <th>उत्पादन परिमाण (के.जि) मा </th>
                                                    <th>कार्य</th>
                                                </tr>
                                            </thead>
                                            <tbody id="table-body-Partial">
                                                @if (Model.EatableCropsViewModelList.Count > 0)
                                                {
                                                    foreach (var item in Model.EatableCropsViewModelList)
                                                    {
                                                        <partial name="_EatableCrops.cshtml" model="@item" />
                                                    }
                                                }
                                                else
                                                {
