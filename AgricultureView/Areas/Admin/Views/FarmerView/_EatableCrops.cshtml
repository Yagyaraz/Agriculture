@using HtmlHelpers.BeginCollectionItemCore
@model EatableCropsViewModel
@{
    ViewData["Title"] = "_EatableCrops";
}

<tr class="new">
    @using (Html.BeginCollectionItem("EatableCropsViewModelList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="CropsInformationId" type="hidden" />
            <select asp-for="CropsTypeId" asp-items="await _Utility.GetCropsTypeSelectListItems()" class="form-select form-control">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="CropsTypeId" class="text-danger"></span>
        </td>      
        <td>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </td>

        <td>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>