@using AgricultureView.Constants
@model IEnumerable<AgricultureServiceViewModel>
@{
    ViewData["Title"] = "Service";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateService" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">सेवा र सुबिधा</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>आर्थिक वर्ष</th>
                                    <th>सेवा र सुविधा</th>
                                    <th>योजना</th>
                                    <th>कार्यक्रम</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FiscalYearName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProgramName)</td>
                                        <td class="text-center align-middle p-2">
                                            <div class="d-flex justify-content-between align-items-center g-3">
                                                <a asp-action="CreateService" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt me-3" aria-hidden="true"></i></a>
                                       
                                                <a asp-action="ServiceDetails" title="Details" asp-route-id="@item.Id"><i class="fa fa-file-alt me-3" aria-hidden="true"></i></a>
                                                <form asp-area=""
                                                      asp-controller="AjaxMVC"
                                                      asp-action="Delete"
                                                      asp-route-table="@TableNameConstants.AgricultureService"
                                                      asp-route-id="@item.Id"
                                                      method="post"
                                                      onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                    <button type="submit" class="btn btn-link p-0">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
