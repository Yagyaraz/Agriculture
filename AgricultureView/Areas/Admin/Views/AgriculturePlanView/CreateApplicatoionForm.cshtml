@model AgricultureApplicatoionFormViewModel
@{
    ViewData["Title"] = "CreateApplicatoionForm";
}
<link href="~/select/select2.css" rel="stylesheet" />
<div class="page-inner">
    <div class="page-header">
        @* <h3 class="fw-bold mb-3">Create Farmer Group</h3> *@
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-area="Admin" asp-controller="AgriculturePlanView" asp-action="ApplicatoionForm">ApplicatoionForm List</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Create ApplicatoionForm</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <form method="post" asp-action="CreateApplicatoionForm" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">सेवा र सुविधा थप्नुहोस</div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" class="form-control" type="hidden" />
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                    <label>आर्थिक वर्ष</label>
                                    <select asp-for="FiscalYearId" asp-items="await _Utility.GetFiscalYearSelectListItems()" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="FiscalYearId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                    <label>कार्यक्रम </label>
                                    <select asp-for="ProgramId" asp-items="await _Utility.GetProgramSelectListItems()" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="ProgramId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                    <label>योजना </label>
                                    <select asp-for="ProjectId" asp-items="await _Utility.GetProjectSelectListItems(Model.ProgramId)" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                    <label>योजना सेवा </label>
                                    <select asp-for="ServiceId" asp-items="await _Utility.GetServiceByProjectId(Model.ProjectId)" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 p-0">
                                <div class="form-group">
                                    <label>किसान प्रकार</label>
                                    <select asp-for="FarmerTypeId" class="form-select form-control" id="selectFarmerType">
                                        <option value="">--Select--</option>
                                        <option value="1">व्यक्तिगत</option>
                                        <option value="2">समूह</option>
                                    </select>
                                    <span asp-validation-for="FarmerTypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3 p-0" id="kishanType">
                                <div class="form-group form-control" style="display:flex;flex-direction:column;border-color:transparent">
                                    <label>किसानको नाम </label>
                                    <select asp-for="FarmerId" asp-items="await _Utility.GetFarmerSelectListItems()" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="FarmerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 row" id="farmerGroup">
                                <div class="col-md-12 col-lg-6 p-0">
                                    <div class="form-group">
                                        <label>कृषि समूह </label>
                                        <select asp-for="AgriGroupId" asp-items="await _Utility.GetFarmerGroupSelectListItems()" class="form-select form-control">
                                            <option>--Select--</option>
                                        </select>
                                        <span asp-validation-for="AgriGroupId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-6 p-0">
                                    <div class="form-group">
                                        <label>सम्पर्क व्यक्ति नाम  </label>
                                        <input asp-for="ContactName" class="form-control" />
                                        <span asp-validation-for="ContactName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>कैफियत  </label>
                                    <textarea  asp-for="Remarks" class="form-control"></textarea>
                                    <span asp-validation-for="Remarks" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>नागरिकताको फोटो  </label>
                                    <input type="file" asp-for="CitizenPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="CitizenPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.CitizenPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>जग्गा स्वामित्वको फोटो  </label>
                                    <input type="file" asp-for="LandOwnershipPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="LandOwnershipPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.LandOwnershipPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>योजना विवरणको फोटो  </label>
                                    <input type="file" asp-for="PlanDetailPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="PlanDetailPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.PlanDetailPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            --

                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>पंजीकरण/नवीकरणको फोटो </label>
                                    <input type="file" asp-for="PanjikaranPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="PanjikaranPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.PanjikaranPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>स्थाई लेखाको फोटो </label>
                                    <input type="file" asp-for="SthailekhaPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="SthailekhaPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.SthailekhaPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>करको फोटो </label>
                                    <input type="file" asp-for="TaxPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="TaxPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.TaxPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>बैठकको माईन्युटको फोटो </label>
                                    <input type="file" asp-for="MinutePhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="MinutePhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.MinutePhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                            <div class="col-md-6 col-lg-12 p-0">
                                <div class="form-group">
                                    <label>स्व घोषणाको फोटो  </label>
                                    <input type="file" asp-for="SelfdecisionPhoto" class="form-control" accept="image/jpeg" />
                                    <span asp-validation-for="SelfdecisionPhoto" class="text-danger"></span>
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="pt-1">
                                        <img class="user-avatar" src="@(_global.BaseUrl() + Model.SelfdecisionPhotoPath) " style="width:180px;" alt="Photo">
                                    </div>
                                }
                            </div>
                        </div>

                        <button class="btn btn-success">Submit</button>
                        <button class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            myFunction();
            $("#FarmerId").select2({
                placeholder: "छान्नुहोस्",
                allowClear: true
            });
        });
        var select = document.getElementById("selectFarmerType").onchange = function () { myFunction() };

        function myFunction() {
            debugger
            var value = $('#selectFarmerType').val();
            if (value === "1") {
                $('#kishanType').attr('style', 'display:flex;');
                $('#farmerGroup').attr('style', 'display:none;');
                $('#AgriGroupId').val("");
                $('#ContactName').val("");
            }
            else if (value === "2") {
                $('#kishanType').attr('style', 'display:none;');
                $('#farmerGroup').attr('style', 'display:flex;');
                $('#FarmerId').val("");
            }
            else {
                $('#kishanType').attr('style', 'display:none;');
                $('#farmerGroup').attr('style', 'display:none;');
            }
        }
        </script>
  
 
    <script>
        $('#ProgramId').change(function () {
            $.ajax({
                url: '@Url.Action("GetProjectByProgramId", "AjaxMVC", new { area = "" })',
                type: 'GET',
                data: { id: $(this).val() },
                success: function (data) {
                    $('#ProjectId').empty().append("<option value=''>-Please Select Project-</option>");
                    $.each(data, function (index, item) {
                        $('#ProjectId').append(`<option value="${item.value}">${item.text}</option>`);
                    });
                    $('#ServiceId').empty().append("<option value=''>-Please Select Service-</option>");
                },
                error: function () {
                    alert('error in calling ajax !!');
                }
            });
        });


        $('#ProjectId').change(function () {
            $.ajax({
                url: '@Url.Action("GetServiceByProjectId", "AjaxMVC", new { area = "" })',
                type: 'GET',
                data: { id: $(this).val() },
                success: function (data) {
                    $('#ServiceId').empty().append("<option value=''>-Please Select Service-</option>");
                    $.each(data, function (index, item) {
                        $('#ServiceId').append(`<option value="${item.value}">${item.text}</option>`);
                    });
                },
                error: function () {
                    alert('error in calling ajax !!');
                }
            });
        });
    </script>
}