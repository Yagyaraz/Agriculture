@using AgricultureView.Constants
@model IEnumerable<AgricultureApplicatoionFormViewModel>
@{
    ViewData["Title"] = "ApplicatoionForm";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateApplicatoionForm" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">परियोजना/कार्यक्रम आवेदन फारम व्यवस्थापन</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>आर्थिक वर्ष</th>
                                    <th>किसान प्रकार</th>
                                    <th>कृषि समूह / किसानको नाम</th>
                                    <th>कार्यक्रम</th>
                                    <th>योजना</th>
                                    <th>योजना सेवा</th>
                                    <th>स्थिति</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FiscalYearName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerType)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FarmerorAgriGroupName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProgramName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProgramName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                                        <td></td>
                                        <td class="text-center p-2 align-middle">
                                            <div class="d-flex justify-content-between h-full g-4 align-items-center">
                                            <a asp-action="CreateApplicatoionForm" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt me-2" aria-hidden="true"></i></a>
                                        
                                                <a asp-action="ApplicationDetails" title="Details" asp-route-id="@item.Id"><i class="fa fa-file-alt me-2" aria-hidden="true"></i></a>

                                            <form asp-area=""
                                                  asp-controller="AjaxMVC"
                                                  asp-action="Delete"
                                                  asp-route-table="@TableNameConstants.Farmer"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                <button type="submit" class="btn btn-link p-0">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
