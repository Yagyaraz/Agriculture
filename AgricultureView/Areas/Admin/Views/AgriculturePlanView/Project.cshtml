@model IEnumerable<AgricultureProjectViewModel>
@{
    ViewData["Title"] = "Project";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateProject" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">परियोजना</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>आर्थिक वर्ष</th>
                                    <th>योजना</th>
                                    <th>कार्यक्रम</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FiscalYearName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProgramName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                                        <td class="text-center d-flex justify-content-around">
                                            <a asp-action="CreateProject" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>
                                            <a asp-action="CreateProject" title="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-alt" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
