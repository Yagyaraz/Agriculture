@using AgricultureView.Constants
@model IEnumerable<GunasoViewModel>
@{
    ViewData["Title"] = "Gunaso";
}

<div class="page-inner">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">गुनासो सूची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>गुनासो कर्ता</th>
                                    <th>फोन न.</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                        <td class="text-center">
                                            <a asp-action="GunasoDetail" title="Detail" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                            <form asp-area=""
                                                  asp-controller="AjaxMVC"
                                                  asp-action="Delete"
                                                  asp-route-table="@TableNameConstants.Gunaso"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                <button type="submit" class="btn btn-link">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
