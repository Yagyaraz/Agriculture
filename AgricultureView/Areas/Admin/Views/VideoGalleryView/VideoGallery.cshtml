@using AgricultureView.Constants

@model IEnumerable<VideoGalleryViewModel>
@{
    ViewData["Title"] = "VideoGallery";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateVideoGallery" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">भिडियो सूची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>शिर्षक</th>
                                    <th>एल्बम</th>
                                    <th>स्थिति</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PlaylistName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Publised)</td>
                                        <td class="text-center align-middle p-2">
                                            <div class="d-flex justify-content-around align-items-center">
                                            <a asp-action="CreateVideoGallery" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>
                                            @* <a asp-action="DeleteVideoGallery" title="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-alt" aria-hidden="true"></i></a> *@
                                            <form asp-area=""
                                                  asp-controller="AjaxMVC"
                                                  asp-action="Delete"
                                                  title="Delete"
                                                  asp-route-table="@TableNameConstants.VideoGallery"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                <button type="submit" class="btn btn-link p-0">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
