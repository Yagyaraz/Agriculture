@model SubsidyDetailViewModel
@using HtmlHelpers.BeginCollectionItemCore

@{
    ViewData["Title"] = "_SubsidyDetail";
}

<tr class="new">
    @using (Html.BeginCollectionItem("SubsidyDetailViewModelList"))
    {
        <td>
            <input asp-for="Id" type="hidden" />
            <input asp-for="SubsidyId" type="hidden" />
            <select asp-for="CategoryId" asp-items="await _Utility.GetCategorySelectListItems()" onchange="UpdateSubCat(this)" class="form-select form-control CategoryId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </td>
        <td>
            <select asp-for="SubCategoryId" asp-items="await _Utility.GetSubCategorySelectListItems(Model.CategoryId)" class="form-select form-control SubCategoryId">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </td>
        <td>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </td>
        <td>
            <button type="button" onclick="DeleteRow(this)" class="row-button btn btn-sm btn-danger btn-delete"><i class="fa fa-minus"></i></button>
        </td>
    }
</tr>