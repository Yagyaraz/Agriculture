@model IEnumerable<MarketPriceViewModel>
@{
    ViewData["Title"] = "MarketPrice";
}


<div class="page-inner">
    <div class="page-header">
        <a asp-action="MarketPriceCreate" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">बजार मुल्य व्यवस्थापन</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>सर्भेक्षण मिति</th>
                                    <th>बजारको नाम</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MarketName)</td>
                                        <td class="text-center"> <a asp-action="MarketPriceCreate" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a></td>
                                        <td class="text-center"> <a asp-action="MarketPriceDetails" title="Detail" asp-route-id="@item.Id"><i class="fa fa-file" aria-hidden="true"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
