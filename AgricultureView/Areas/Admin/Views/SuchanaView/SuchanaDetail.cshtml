@model SuchanaViewModel
@{
    ViewData["Title"] = "Suchana Details";
}

<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">सूचना  विवरण</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a asp-controller="Home" asp-action="Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator"><i class="icon-arrow-right"></i></li>
            <li class="nav-item">
                <a asp-controller="SuchanaView" asp-action="Suchana">Suchana List</a>
            </li>
            <li class="separator"><i class="icon-arrow-right"></i></li>
            <li class="nav-item"><a href="#">Suchana Details</a></li>
        </ul>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">सूचना  विवरण</h4>
        </div>

        <div class="card-body">

            <div class="row">

            @*     <div class="col-md-3 mb-3">
                    <strong>आर्थिक वर्ष :</strong>
                    <div>@Model.FiscalYearName</div>
                </div> *@

                <div class="col-md-3 mb-3 d-flex gap-3">
                    <strong>शिर्षक :</strong>
                    <div>@Model.Title</div>
                </div>

               

            </div>

            <hr />

            <div class="mb-3">
                <strong>विवरण :</strong>
                <div class="border p-2" style="min-height: 120px;">
                    @Html.Raw(Model.Description)
                </div>
            </div>

            <hr />

            <div class="mb-3">
                <strong>फोटो :</strong>
                <div class="pt-2">
                    @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
                        <img src="@(_global.BaseUrl() + Model.FilePath)"
                             class="img-thumbnail"
                             style="width:220px;" />
                    }
                    else
                    {
                        <div class="text-muted">No photo available</div>
                    }
                </div>
            </div>

        </div>

        <div class="card-action">
            <a asp-action="Suchana" asp-controller="SuchanaView" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
