@using AgricultureView.Constants
@model IEnumerable<SeedStoreViewModel>
@{
    ViewData["Title"] = "SeedStore";
}


<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateSeedStore" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">बालि पसल व्यवस्थापन</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>नाम</th>
                                    <th>ठेगाना</th>
                                    <th>इमेल</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td class="text-center d-flex justify-content-between p-2"> 
                                            <div class="d-flex justify-content-between align-items-center">
                                                <a asp-action="CreateSeedStore" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt me-3" aria-hidden="true"></i></a>
                                                <a asp-action="SeedStoreDetail" title="Detail" asp-route-id="@item.Id"><i class="fa fa-file-alt me-3" aria-hidden="true"></i></a>
                                                @* <a asp-action="SeedStoreDetail" title="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-alt" aria-hidden="true"></i></a> *@
                                                <form asp-area=""
                                                      asp-controller="AjaxMVC"
                                                      asp-action="Delete"
                                                      title="Delete"
                                                      asp-route-table="@TableNameConstants.SeedStore"
                                                      asp-route-id="@item.Id"
                                                      method="post"
                                                      onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                    <button type="submit" class="btn btn-link p-0">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
