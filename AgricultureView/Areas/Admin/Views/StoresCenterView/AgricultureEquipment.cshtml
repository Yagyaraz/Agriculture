@using AgricultureView.Constants
@model IEnumerable<AgricultureEquipmentViewModel>
@{
    ViewData["Title"] = "AgricultureEquipment";
}


<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateAgricultureEquipment" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">कृषि औजार पसल</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>नाम</th>
                                    <th>ठेगाना</th>
                                    <th>इमेल</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td class="text-center d-flex justify-content-between"> 
                                            <a asp-action="CreateAgricultureEquipment" title="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i></a>
                                            <a asp-action="AgricultureEquipmentDetail" title="Detail" asp-route-id="@item.Id"><i class="fa fa-file-alt" aria-hidden="true"></i></a>
                                            <form asp-area=""
                                                  asp-controller="AjaxMVC"
                                                  asp-action="Delete"
                                                  asp-route-table="@TableNameConstants.AgricultureEquipment"
                                                  asp-route-id="@item.Id"
                                                  method="post"
                                                  onsubmit="return confirm('के तपाई हटाउन चाहनुहुन्छ?');">

                                                <button type="submit" class="btn btn-link">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
