 @model IEnumerable<RegisterViewModel>

@{
    ViewData["Title"] = "Userlist";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="Register" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">User List</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>S.N</th>
                                    <th>नाम</th>
                                    <th>ई-मेल</th>
                                    <th>रोल</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                                        <td></td>
                                        @* <td> <a asp-action="Register" asp-area="" asp-controller="Account" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a></td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
