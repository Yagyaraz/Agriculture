@model IEnumerable<ApplicationFormViewModel>
@inject IUtility _utility;
@{
    ViewData["Title"] = "ApplicationForm";
}

<div class="page-inner">
    <div class="page-header">
        <a asp-action="CreateApplicationForm" class="fw-bold mb-3 btn btn-success"><i class="fa fa-plus"></i>&nbsp; Create New</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">तालिम सूची</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="basic-datatables" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>क्र.सं.</th>
                                    <th>आवेदकको पुरा नाम </th>
                                    <th>ई-मेल</th>
                                    <th>फोन न.</th>
                                    <th>तालिम/कार्यक्रम</th>
                                    <th>कार्य</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@string.Format("{0}", Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@await _utility.GetProgramNameById(Convert.ToInt32(item.Program))</td>
                                        <td class="text-center">
                                            <a asp-action="ApplicationFormDetail" title="Details" asp-route-id="@item.Id"><i class="fa fa-file" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
