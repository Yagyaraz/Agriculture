@model ApplicationFormViewModel
@{
    Layout = null;   // Public page (no admin layout)
    ViewData["Title"] = "Create Application Form";
}

<!DOCTYPE html>
<html lang="ne">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>तालिमका लागि आवेदन - Conatus</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #e8f5e8, #c8e6c9);
            min-height: 100vh;
            font-family: 'Segoe UI', 'Preeti', 'Kalimati', sans-serif;
        }

        .application-card {
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
            background: #fff;
            overflow: hidden;
        }

        .header-section {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            color: #fff;
            padding: 3rem 1rem;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #1b5e20;
        }

        .form-control,
        .form-select {
            border-radius: 12px;
            padding: 0.75rem 1rem;
        }

        .btn-submit {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            border: none;
            border-radius: 12px;
            padding: 1rem 4rem;
            font-size: 1.2rem;
            font-weight: bold;
        }

            .btn-submit:hover {
                background: linear-gradient(135deg, #1b5e20, #388e3c);
            }
    </style>
</head>

<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <form asp-area="Admin"
                      asp-controller="ApplicationFormView"
                      asp-action="CreateApplicationForm"
                      method="post"
                      enctype="multipart/form-data">

                    <div class="application-card">

                        <!-- Header -->
                        <div class="header-section">
                            <h1>तालिमका लागि आवेदन</h1>
                            <p class="lead mb-0">
                                प्रोफेसनल तालिम कार्यक्रममा सहभागी हुनुहोस्
                            </p>
                        </div>

                        <div class="card-body p-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <!-- Personal Info -->
                            <h4 class="mb-4">व्यक्तिगत जानकारी</h4>

                            <div class="row g-4 mb-5">
                                <div class="col-md-6">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Dob" class="form-label"></label>
                                    <input asp-for="Dob" type="date" class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label asp-for="Address" class="form-label"></label>
                                    <textarea asp-for="Address" class="form-control"></textarea>
                                </div>
                            </div>

                            <!-- Program -->
                            <h4 class="mb-4">तालिम कार्यक्रम छनोट</h4>

                            <div class="row g-4 mb-5">
                                <div class="col-md-8">
                                    <label asp-for="Program" class="form-label"></label>
                                    <select asp-for="Program" asp-items="await _Utility.GetAgriSectorSelectListItems()" class="form-select form-control">
                                        <option>--Select--</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Batch" class="form-label"></label>
                                    <select asp-for="Batch" class="form-select">
                                        <option>बिहान ९-१२ बजे</option>
                                        <option>दिउँसो २-५ बजे </option>
                                        <option>बेलुका ६-९ बजे  </option>
                                        <option>हप्तान्त ब्याच </option>
                                    </select>
                                </div>
                            </div>

                            <!-- Education -->
                            <h4 class="mb-4">शिक्षा र अनुभव</h4>

                            <div class="row g-4 mb-5">
                                <div class="col-md-6">
                                    <label asp-for="Qualification" class="form-label"></label>
                                    <input asp-for="Qualification" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Institution" class="form-label"></label>
                                    <input asp-for="Institution" class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label asp-for="Experience" class="form-label"></label>
                                    <textarea asp-for="Experience" class="form-control"></textarea>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Resume" class="form-label"></label>
                                    <input asp-for="Resume" type="file" class="form-control" />
                                </div>
                            </div>

                            <!-- Submit -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-submit text-white">
                                    आवेदन पेश गर्नुहोस्
                                </button>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
