@model ApplicationFormViewModel
@{
    ViewData["Title"] = "Application Details";
}

<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">आवेदन विवरण</h3>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <div class="card shadow-sm">
                    <div class="card-body p-5">

                        <h4 class="text-success mb-4">व्यक्तिगत जानकारी</h4>
                        <table class="table table-bordered">
                            <tr>
                                <th>पुरा नाम</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>इमेल</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>मोबाइल नम्बर</th>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <th>जन्म मिति</th>
                                <td>@Model.Dob</td>
                            </tr>
                            <tr>
                                <th>ठेगाना</th>
                                <td>@Model.Address</td>
                            </tr>
                        </table>

                        <h4 class="text-success mt-5 mb-4">तालीम विवरण</h4>
                        <table class="table table-bordered">
                            <tr>
                                <th>कार्यक्रम</th>
                                <td>@Model.Program</td>
                            </tr>
                            <tr>
                                <th>ब्याच</th>
                                <td>@Model.Batch</td>
                            </tr>
                        </table>

                        <h4 class="text-success mt-5 mb-4">शिक्षा र अनुभव</h4>
                        <table class="table table-bordered">
                            <tr>
                                <th>योग्यता</th>
                                <td>@Model.Qualification</td>
                            </tr>
                            <tr>
                                <th>संस्था</th>
                                <td>@Model.Institution</td>
                            </tr>
                            <tr>
                                <th>अनुभव</th>
                                <td>@Model.Experience</td>
                            </tr>
                            <tr>
                                <th>Resume</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.ResumePath))
                                    {
                                        <a href="~/resumes/@Model.ResumePath" target="_blank"
                                           class="btn btn-sm btn-primary">
                                            Download Resume
                                        </a>
                                    }
                                </td>
                            </tr>
                        </table>

                        <h4 class="text-success mt-5 mb-4">थप जानकारी</h4>
                        <table class="table table-bordered">
                            <tr>
                                <th>Source</th>
                                <td>@Model.Source</td>
                            </tr>
                            <tr>
                                <th>Message</th>
                                <td>@Model.Message</td>
                            </tr>
                        </table>

                        <div class="text-center mt-4">
                            <a asp-action="ApplicationForm"
                               asp-controller="ApplicationFormView"
                               class="btn btn-secondary">
                                Back to List
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
