        :root {
            --primary: #28a745;
            --secondary: #20c997;
            --dark: #155724;
            --light: #f8f9fa;
            --text: #212529;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            color: var(--text);
            scroll-behavior: smooth;
            overflow-x: hidden;
        }

        .bg-primary {
            background: var(--primary) !important;
            color: #fff;
        }

        .text-primary {
            color: var(--primary) !important;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: var(--dark);
                transform: translateY(-2px);
            }

        .navbar {
            background: rgba(255, 255, 255, .95);
            backdrop-filter: blur(8px);
            transition: all .3s ease;
        }

            .navbar.scrolled {
                background: #fff;
                box-shadow: 0 2px 15px rgba(0, 0, 0, .1);
                padding: 0.5rem 0;
            }


        
        /* Hero Section Height */
        .home {
            height: 90vh;
            overflow: hidden;
            position: relative;
        }

        .header-carousel-item {
            height: 90vh;
            position: relative;
        }

            .header-carousel-item img {
                height: 100%;
                object-fit: cover;
            }

        /* Carousel Caption Overlay */
        .carousel-caption {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgb(0 0 0 / 15%);
            z-index: 2;
        }

        /* Owl Carousel Buttons */
        .owl-prev,
        .owl-next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.356) !important;
            color: #198754 !important;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            font-size: 22px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .owl-prev:hover,
            .owl-next:hover {
                background: #198754 !important;
                color: #fff !important;
            }

        .owl-prev {
            left: 25px;
        }

        .owl-next {
            right: 25px;
        }

        /* Ensure buttons are above caption overlay */
        .owl-nav {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            pointer-events: none;
        }

            .owl-nav button {
                pointer-events: all;
            }

        .service-item,
        .project-item,
        .blog-item,
        .team-item,
        .testimonial-item,
        .gallery-item {
            transition: all .3s ease;
            border-radius: 12px;
            overflow: hidden;
        }

            .service-item:hover,
            .blog-item:hover,
            .gallery-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, .15) !important;
            }

        .project-item {
            position: relative;
            min-height: 80vh;
            background: linear-gradient(135deg, #5ec966c7 0%, #1b6070eb 100%);
            color: white;
            overflow: hidden;
            display: flex;
            align-items: center;
        }

