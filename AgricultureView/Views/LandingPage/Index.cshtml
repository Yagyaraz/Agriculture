         });

         const API_KEY = "e56234b0015d3d7e9703abfcbb3f2aef";
         const weather = {
             city: document.getElementById('city'),
             temp: document.getElementById('temp'),
             icon: document.getElementById('weather-icon'),
             desc: document.getElementById('description'),
             humidity: document.getElementById('humidity'),
             wind: document.getElementById('wind')
         };

         // Fetch weather data from OpenWeatherMap
         async function getWeather(lat, lon) {
             try {
                 const res = await fetch(
                     `https://api.openweathermap.org/data/2.5/weather?lat=${lat}&lon=${lon}&appid=${API_KEY}&units=metric`
                 );
                 if (!res.ok) throw new Error('Weather data not available');
                 const data = await res.json();

                 weather.city.textContent = data.name || "Unknown Location";
                 weather.temp.textContent = Math.round(data.main.temp) + "°C";
                 weather.desc.textContent = data.weather[0].description;
                 weather.humidity.textContent = data.main.humidity + "%";
                 weather.wind.textContent = data.wind.speed + " m/s";

                 // Display appropriate weather icon
                 const icon = data.weather[0].icon;
                 weather.icon.className = `fas fa-${getWeatherIcon(icon)} weather-icon me-3`;
             } catch (error) {
                 console.error(error);
                 weather.city.textContent = "Weather Unavailable";
                 weather.temp.textContent = "--°C";
                 weather.desc.textContent = "N/A";
                 weather.humidity.textContent = "--";
                 weather.wind.textContent = "--";
             }
         }

         // Map OpenWeather icons to Font Awesome icons
         function getWeatherIcon(code) {
             if (code.startsWith("01")) return "sun";
             if (code.startsWith("02")) return "cloud-sun";
             if (code.startsWith("03") || code.startsWith("04")) return "cloud";
             if (code.startsWith("09") || code.startsWith("10")) return "cloud-rain";
             if (code.startsWith("11")) return "bolt";
             if (code.startsWith("13")) return "snowflake";
             if (code.startsWith("50")) return "smog";
             return "cloud";
         }

         // Try to get user's location automatically
         if (navigator.geolocation) {
             navigator.geolocation.getCurrentPosition(
                 pos => getWeather(pos.coords.latitude, pos.coords.longitude),
                 err => {
                     console.warn(err);
                     weather.city.textContent = "Location Denied";
                     weather.temp.textContent = "--°C";
                 }
             );
