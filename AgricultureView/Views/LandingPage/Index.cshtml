        }

            .footer a {
                color: #adb5bd;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #fff;
                }

        @@keyframes flash {
            0%, 100% {
                background-color: #dc3545;
