    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        const API_KEY = "e56234b0015d3d7e9703abfcbb3f2aef";
        const weather = {
            city: document.getElementById('city'),
            temp: document.getElementById('temp'),
            icon: document.getElementById('weather-icon'),
            desc: document.getElementById('description'),
            humidity: document.getElementById('humidity'),
            wind: document.getElementById('wind')
        };

        // Fetch weather data from OpenWeatherMap
        async function getWeather(lat, lon) {
            try {
                const res = await fetch(
                    `https://api.openweathermap.org/data/2.5/weather?lat=${lat}&lon=${lon}&appid=${API_KEY}&units=metric`
                );
                if (!res.ok) throw new Error('Weather data not available');
                const data = await res.json();

                weather.city.textContent = data.name || "Unknown Location";
                weather.temp.textContent = Math.round(data.main.temp) + "°C";
                weather.desc.textContent = data.weather[0].description;
                weather.humidity.textContent = data.main.humidity + "%";
                weather.wind.textContent = data.wind.speed + " m/s";

                // Display appropriate weather icon
                const icon = data.weather[0].icon;
                weather.icon.className = `fas fa-${getWeatherIcon(icon)} weather-icon me-3`;
            } catch (error) {
                console.error(error);
                weather.city.textContent = "Weather Unavailable";
                weather.temp.textContent = "--°C";
                weather.desc.textContent = "N/A";
                weather.humidity.textContent = "--";
                weather.wind.textContent = "--";
            }
        }

        // Map OpenWeather icons to Font Awesome icons
        function getWeatherIcon(code) {
            if (code.startsWith("01")) return "sun";
            if (code.startsWith("02")) return "cloud-sun";
            if (code.startsWith("03") || code.startsWith("04")) return "cloud";
            if (code.startsWith("09") || code.startsWith("10")) return "cloud-rain";
            if (code.startsWith("11")) return "bolt";
            if (code.startsWith("13")) return "snowflake";
            if (code.startsWith("50")) return "smog";
            return "cloud";
        }

        // Try to get user's location automatically
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                pos => getWeather(pos.coords.latitude, pos.coords.longitude),
                err => {
                    console.warn(err);
                    weather.city.textContent = "Location Denied";
                    weather.temp.textContent = "--°C";
                }
            );
        } else {
            weather.city.textContent = "Geolocation Not Supported";
        }

        // Navbar Scroll
        window.addEventListener('scroll', () => {
            document.querySelector('.navbar').classList.toggle('scrolled', window.scrollY > 50);
            document.querySelector('.back-to-top').classList.toggle('show', window.scrollY > 300);
        });

        // Smooth Scroll
        document.querySelectorAll('a[href^="#"]').forEach(a => {
            a.addEventListener('click', e => {
                e.preventDefault();
                const target = document.querySelector(a.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Owl Carousel
        $('.header-carousel').owlCarousel({
            loop: true, margin: 0, nav: true, autoplay: true, autoplayTimeout: 8000,
            items: 1, dots: true, animateOut: 'fadeOut', animateIn: 'fadeIn'
        });

        $(document).ready(function () {
            $(".header-carousel").owlCarousel({
                items: 1,
                loop: true,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true,
                smartSpeed: 900,
                nav: true,
                dots: false,
                navText: [
                    '<i class="fas fa-chevron-left"></i>',
                    '<i class="fas fa-chevron-right"></i>'
                ]
            });
        });

        // YouTube Popup
        document.querySelectorAll('.youtube-play').forEach(btn => {
            btn.addEventListener('click', () => {
                const videoId = btn.getAttribute('data-id');
                const modalHtml = `
                <div class="modal fade" id="ytModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-xl">
                        <div class="modal-content bg-dark">
                            <div class="modal-header border-0">
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body p-0">
                                <iframe width="100%" height="500"
                                        src="https://www.youtube.com/embed/${videoId}?autoplay=1"
                                        frameborder="0" allow="autoplay; fullscreen"
                                        allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>`;
                document.body.insertAdjacentHTML('beforeend', modalHtml);
                new bootstrap.Modal('#ytModal').show();
                document.getElementById('ytModal').addEventListener('hidden.bs.modal', () =>
                    document.getElementById('ytModal').remove()
                );
            });
        });

        // Local MP4 Popup
        document.querySelectorAll('.local-play').forEach(btn => {
            btn.addEventListener('click', () => {
                const src = btn.getAttribute('data-src');
                const modalHtml = `
                <div class="modal fade" id="mp4Modal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-xl">
                        <div class="modal-content bg-dark">
                            <div class="modal-header border-0">
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body p-0">
                                <video controls autoplay class="w-100" style="max-height:80vh;">
                                    <source src="${src}" type="video/mp4">
                                </video>
                            </div>
                        </div>
                    </div>
                </div>`;
                document.body.insertAdjacentHTML('beforeend', modalHtml);
                new bootstrap.Modal('#mp4Modal').show();
                document.getElementById('mp4Modal').addEventListener('hidden.bs.modal', () =>
                    document.getElementById('mp4Modal').remove()
                );
            });
        });

        // Counter Up
        $('.counter-value').counterUp({ delay: 10, time: 1500 });
    </script>
