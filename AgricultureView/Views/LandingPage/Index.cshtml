                object-fit: cover;
                display: block;
            }

        .video-overlay {
            position: absolute;
            inset: 0;
            background: rgba(40, 167, 69, .6);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity .4s ease;
