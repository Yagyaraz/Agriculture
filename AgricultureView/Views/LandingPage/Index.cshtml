    <script>
        const categoryButtons = document.getElementById('categoryButtons');
        const videoList = document.getElementById('videoList');
        const modal = new bootstrap.Modal(document.getElementById('videoModal'));
        const modalTitle = document.getElementById("modalTitle");
        const modalBody = document.getElementById("modalBodyContainer");

        // ------------------- GET UNIQUE CATEGORIES -------------------
        const categories = ["All", ...new Set(videos.map(v => v.category))];

        // ------------------- RENDER CATEGORY BUTTONS -------------------
        categories.forEach(cat => {
            const btn = document.createElement('button');
            btn.className = 'btn btn-outline-dark m-1';
            btn.textContent = cat;

            btn.addEventListener('click', () => {
                displayVideos(cat);
            });

            categoryButtons.appendChild(btn);
        });

        // ------------------- DISPLAY VIDEOS -------------------
        function displayVideos(selectedCategory) {
            videoList.innerHTML = "";

            const filtered = selectedCategory === "All"
                ? videos
                : videos.filter(v => v.category === selectedCategory);

            filtered.forEach(v => {
                const html = `
                    <div class="col-md-6 col-lg-4" data-aos="zoom-in">
                        <div class="ratio ratio-16x9 rounded shadow overflow-hidden position-relative cursor-pointer video-item"
                             data-src="${v.src}" data-title="${v.title}">
                            <img class="video-thumb w-100 h-100 object-fit-cover" src="/image/video-placeholder.png" />
                        </div>
                        <div class="video-card shadow rounded overflow-hidden local-play">
                            <p class="text-center fw-bold">${v.title}</p>
                        </div>
                    </div>
                `;
                videoList.insertAdjacentHTML("beforeend", html);
            });

            loadThumbnails();
            enableVideoClicks();
        }

        // ------------------- GET YOUTUBE THUMBNAIL -------------------
        function getYoutubeThumbnail(url) {
            let id = "";
            if (url.includes("watch?v=")) id = url.split("watch?v=")[1].split("&")[0];
            else if (url.includes("youtu.be/")) id = url.split("youtu.be/")[1].split("?")[0];
            return `https://img.youtube.com/vi/${id}/hqdefault.jpg`;
        }

        // ------------------- CREATE LOCAL VIDEO THUMBNAIL -------------------
        function createLocalThumbnail(videoSrc, imgElement) {
            const video = document.createElement("video");
            video.src = videoSrc;
            video.preload = "metadata";
            video.muted = true;
            video.crossOrigin = "anonymous";

            video.addEventListener("loadedmetadata", () => {
                video.currentTime = 0.5;
            });

            video.addEventListener("seeked", () => {
                const canvas = document.createElement("canvas");
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                const ctx = canvas.getContext("2d");
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                imgElement.src = canvas.toDataURL("image/jpeg");
            });

            video.onerror = () => {
                imgElement.src = "/image/video-placeholder.png";
            };
        }

        // ------------------- THUMBNAIL LOADER -------------------
        function loadThumbnails() {
            document.querySelectorAll('.video-item').forEach(item => {
                const img = item.querySelector(".video-thumb");
                const src = item.dataset.src;

                if (src.includes("youtu")) {
                    img.src = getYoutubeThumbnail(src);
                } else {
                    createLocalThumbnail(src, img);
                }
            });
        }

        // ------------------- ENABLE VIDEO CLICK -------------------
        function enableVideoClicks() {
            document.querySelectorAll(".video-item").forEach(item => {
                item.addEventListener("click", () => {
                    const src = item.dataset.src;
                    const title = item.dataset.title;

                    modalTitle.textContent = title;
                    modalBody.innerHTML = "";

                    if (src.includes("youtu")) {
                        let id = "";
                        if (src.includes("watch?v=")) id = src.split("watch?v=")[1].split("&")[0];
                        else if (src.includes("youtu.be/")) id = src.split("youtu.be/")[1].split("?")[0];

                        modalBody.innerHTML = `
                            <iframe width="100%" height="600"
                                src="https://www.youtube.com/embed/${id}?autoplay=1"
                                frameborder="0"
                                allow="autoplay; encrypted-media; fullscreen"
                                allowfullscreen></iframe>
                        `;
                    } else {
                        modalBody.innerHTML = `
                            <video controls autoplay muted playsinline class="w-100" style="max-height:80vh;">
                                <source src="${src}" type="video/mp4">
                            </video>
                        `;
                    }

                    modal.show();
                });
            });
        }

        // Stop video on close
        document.getElementById("videoModal").addEventListener("hidden.bs.modal", () => {
            modalBody.innerHTML = "";
        });

        // Load all videos initially
        displayVideos("All");
    </script>

