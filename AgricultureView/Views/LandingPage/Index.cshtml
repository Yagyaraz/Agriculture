            height: 90vh;
            position: relative;
        }

        .header-carousel-item img {
            height: 100%;
            object-fit: cover;
        }

        /* Carousel Caption Overlay */
        .carousel-caption {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgb(0 0 0 / 15%);
            z-index: 2;
        }

        /* Owl Carousel Buttons */
        .owl-prev,
        .owl-next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.356) !important;
            color: #198754 !important;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            font-size: 22px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .owl-prev:hover,
        .owl-next:hover {
            background: #198754 !important;
            color: #fff !important;
        }

        .owl-prev {
            left: 25px;
        }

        .owl-next {
            right: 25px;
        }

        /* Ensure buttons are above caption overlay */
        .owl-nav {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            pointer-events: none;
        }

        .owl-nav button {
            pointer-events: all;
        }

        .service-item,
        .project-item,
        .blog-item,
        .team-item,
