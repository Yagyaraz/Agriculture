@model AgricultureView.Areas.Admin.Models.LandingPageViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Krishi</title>
    <link href="~/assets/css/landingpagestyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <section class="main">
        <div class="container">
            <div class="d-flex justify-content-between mt-3">
                <div class="logo">
                    <img src="~/assets/img/ag-logo.webp" width="80" height="80">
                </div>
                <div class="button">
                    <a type="button" class="btn" asp-area="" asp-controller="Account" asp-action="Index">login</a>
                    @* <a type="button" class="btn">Register</a> *@
                </div>
            </div>
            <div class="mt50">
                <div>
                    <h1>Empowering Farmers with Smart Agriculture Solutions</h1>
                    <p>Your one-stop platform for farming guidance, market prices, government schemes, and more.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <h2 class="mt-5">Stay Updated with Dynamic Krishi</h2>
                    <div class="mt-5 mt-10">
                        <div class="krisi-update">
                            <div class="box1">1</div>
                            <div class="box-desc">
                                <h3>Weather Forecast</h3>
                                <p>Get real-time updates and plan your activities.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">2</div>
                            <div class="box-desc">
                                <h3>Market Prices</h3>
                                <p>Track crop prices and make informed decisions.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">3</div>
                            <div class="box-desc">
                                <h3>Government Schemes</h3>
                                <p>Access relevant schemes and maximize benefits.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">4</div>
                            <div class="box-desc">
                                <h3>Training Programs</h3>
                                <p>Enhance your knowledge with expert-led webinars.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="krisi-update-photo">
                        <img src="~/assets/img/krishi-update-Photoroom.png" alt="krishi">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="main-feature mt-5 pt-5 container">

        <!-- Farmers Table -->
        <h2 class="mb-3">किसान सुची </h2>
        @if (Model.Farmers != null && Model.Farmers.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>CitizenNo</th>
                        <th>PhoneNo</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Farmers.Count; i++)
                    {
                        var farmer = Model.Farmers[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@farmer.FullName</td>
                            <td>@farmer.CitizenNo</td>
                            <td>@farmer.PhoneNo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>किसान सुची  उपलब्ध छैन </p>
        }

        <!-- Programs Table -->
        <h2 class="mt-5 mb-3">कृषि कार्यक्रम </h2>
        @if (Model.Programs != null && Model.Programs.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Fiscal Year Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Programs.Count; i++)
                    {
                        var program = Model.Programs[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@program.Title</td>
                            <td>@program.FiscalYearName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>कृषि कार्यक्रम उपलब्ध छैन </p>
        }

        <!-- Projects Table -->
        <h2 class="mt-5 mb-3">कृषि परियोजना</h2>
        @if (Model.Projects != null && Model.Projects.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Project Name</th>
                        <th>Fiscal Year Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Projects.Count; i++)
                    {
                        var project = Model.Projects[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@project.ProjectName</td>
                            <td>@project.FiscalYearName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>कृषि परियोजना  उपलब्ध छैन</p>
        }

        <!-- Services Table -->
        <h2 class="mt-5 mb-3">कृषि सेवा </h2>
        @if (Model.Services != null && Model.Services.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Service Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Services.Count; i++)
                    {
                        var service = Model.Services[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@service.ServiceName</td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>कृषि सेवा  उपलब्ध छैन</p>
        }         
        <!-- AGRI CALENDAR TYPES -->
        <h2 class="mb-3 mt-5">Agri Calendar Types</h2>
        @if (Model.AgriCalendarTypes != null && Model.AgriCalendarTypes.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Type Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AgriCalendarTypes.Count; i++)
                    {
                        var item = Model.AgriCalendarTypes[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.NameEng</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No calendar types found.</p>
        }

        <!-- AGRI CALENDAR CATEGORIES -->
        <h2 class="mb-3 mt-5">Agri Calendar Categories</h2>
        @if (Model.AgriCalendarCategories != null && Model.AgriCalendarCategories.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AgriCalendarCategories.Count; i++)
                    {
                        var item = Model.AgriCalendarCategories[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.NameEng</td>
                            <td>@item.AgriCalendarType</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No calendar categories found.</p>
        }

        <!-- AGRI CALENDAR PRODUCTS -->
        <h2 class="mb-3 mt-5">Agri Calendar Products</h2>
        @if (Model.AgriCalendarProducts != null && Model.AgriCalendarProducts.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AgriCalendarProducts.Count; i++)
                    {
                        var item = Model.AgriCalendarProducts[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.AgriCalendarCategory</td>
                            <td>@item.AgriCalendarType</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No calendar products found.</p>
        }

        <!-- AGRI CALENDAR -->
        <h2 class="mb-3 mt-5">Agri Calendar</h2>
        @if (Model.AgriCalendars != null && Model.AgriCalendars.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Product Name</th>
                        <th>Type Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AgriCalendars.Count; i++)
                    {
                        var item = Model.AgriCalendars[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.CategoryName</td>
                            <td>@item.ProductName</td>
                            <td>@item.TypeName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No agri calendar items found.</p>
        }

        <!-- LIBRARIES -->
        <h2 class="mb-3 mt-5">Library List</h2>
        @if (Model.Libraries != null && Model.Libraries.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Libraries.Count; i++)
                    {
                        var item = Model.Libraries[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No libraries found.</p>
        }

        <!-- MARKETS -->
        <h2 class="mb-3 mt-5">Market List</h2>
        @if (Model.Markets != null && Model.Markets.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Market Name</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Markets.Count; i++)
                    {
                        var item = Model.Markets[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No markets found.</p>
        }

        <!-- MARKET PRICES -->
        <h2 class="mb-3 mt-5">Market Prices</h2>
        @if (Model.MarketPrices != null && Model.MarketPrices.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Market</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.MarketPrices.Count; i++)
                    {
                        var item = Model.MarketPrices[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.MarketName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No market prices found.</p>
        }

        <!-- TRAININGS -->
        <h2 class="mb-3 mt-5">Training List</h2>
        @if (Model.Trainings != null && Model.Trainings.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Training Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Trainings.Count; i++)
                    {
                        var item = Model.Trainings[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Title</td>
                            <td>@item.StartDate</td>
                            <td>@item.EndDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No trainings found.</p>
        }

        <!-- VIDEO PLAYLIST -->
        <h2 class="mb-3 mt-5">Video Playlists</h2>
        @if (Model.Playlists != null && Model.Playlists.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Playlist Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Playlists.Count; i++)
                    {
                        var item = Model.Playlists[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Publised</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No playlists found.</p>
        }

        <!-- VIDEO GALLERIES -->
        <h2 class="mb-3 mt-5">Video Galleries</h2>
        @if (Model.VideoGalleries != null && Model.VideoGalleries.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Video URL</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.VideoGalleries.Count; i++)
                    {
                        var item = Model.VideoGalleries[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Title</td>
                            <td>@item.FilePath</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No videos found.</p>
        }

        <!-- IMAGE GALLERIES -->
        <h2 class="mb-3 mt-5">Image Galleries</h2>
        @if (Model.ImageGalleries != null && Model.ImageGalleries.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ImageGalleries.Count; i++)
                    {
                        var item = Model.ImageGalleries[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Title</td>
                            <td><img src="@item.FilePath" width="80" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p>No images found.</p>
        }

    </section>
    <section class="main-feature mt-5 pt-5">
        <div class="container krishi-feature">
            <div class="">
                <h2>Explore Key Features & Services</h2>
                <div class="row mt-5">
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-seedling" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Farming Guidelines</h3>
                            <p>Access best practices for improved yields.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-wheat-awn" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Cooperative Farming</h3>
                            <p>Collaborate for better resource management.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-money-bill" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Financial Assistance</h3>
                            <p>Find schemes and loans for your needs.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-cart-shopping" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Market Access</h3>
                            <p>Connect with buyers and sell your produce.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="mt-5">
        <div class="bg-footer">
            <p>© 2025 Krishi. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
