@model AgricultureView.Areas.Admin.Models.LandingPageViewModel
@inject AgricultureView.Utility.IGlobalVeriable _global
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Krishi</title>
    <link href="~/assets/css/landingpagestyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <section class="main">
        <div class="container">
            <div class="d-flex justify-content-between mt-3">
                <div class="logo">
                    <img src="~/assets/img/ag-logo.webp" width="80" height="80">
                </div>
                <div class="button">
                    <a type="button" class="btn" asp-area="" asp-controller="Account" asp-action="Index">login</a>
                    @* <a type="button" class="btn">Register</a> *@
                </div>
            </div>
            <div class="mt50">
                <div>
                    <h1>Empowering Farmers with Smart Agriculture Solutions</h1>
                    <p>Your one-stop platform for farming guidance, market prices, government schemes, and more.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <h2 class="mt-5">Stay Updated with Dynamic Krishi</h2>
                    <div class="mt-5 mt-10">
                        <div class="krisi-update">
                            <div class="box1">1</div>
                            <div class="box-desc">
                                <h3>Weather Forecast</h3>
                                <p>Get real-time updates and plan your activities.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">2</div>
                            <div class="box-desc">
                                <h3>Market Prices</h3>
                                <p>Track crop prices and make informed decisions.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">3</div>
                            <div class="box-desc">
                                <h3>Government Schemes</h3>
                                <p>Access relevant schemes and maximize benefits.</p>
                            </div>
                        </div>
                        <div class="krisi-update">
                            <div class="box1">4</div>
                            <div class="box-desc">
                                <h3>Training Programs</h3>
                                <p>Enhance your knowledge with expert-led webinars.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="krisi-update-photo">
                        <img src="~/assets/img/krishi-update-Photoroom.png" alt="krishi">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="main-feature mt-5 pt-5 container">

        <!-- Farmers -->
        <h2 class="mb-3">किसान सुची</h2>
        @if (Model.Farmers != null && Model.Farmers.Any())
        {
            <div class="row g-3">
                @foreach (var farmer in Model.Farmers)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@farmer.FullName</h5>
                                <p class="card-text">
                                    <strong>Citizen No:</strong> @farmer.CitizenNo <br />
                                    <strong>Phone:</strong> @farmer.PhoneNo
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>किसान सुची उपलब्ध छैन</p>
        }

        <!-- Programs -->
        <h2 class="mt-5 mb-3">कृषि कार्यक्रम</h2>
        @if (Model.Programs != null && Model.Programs.Any())
        {
            <div class="row g-3">
                @foreach (var program in Model.Programs)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-primary shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@program.Title</h5>
                                <p class="card-text"><strong>Fiscal Year:</strong> @program.FiscalYearName</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>कृषि कार्यक्रम उपलब्ध छैन</p>
        }

        <!-- Projects -->
        <h2 class="mt-5 mb-3">कृषि परियोजना</h2>
        @if (Model.Projects != null && Model.Projects.Any())
        {
            <div class="row g-3">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-success shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@project.ProjectName</h5>
                                <p class="card-text"><strong>Fiscal Year:</strong> @project.FiscalYearName</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>कृषि परियोजना उपलब्ध छैन</p>
        }

        <!-- Services -->
        <h2 class="mt-5 mb-3">कृषि सेवा</h2>
        @if (Model.Services != null && Model.Services.Any())
        {
            <div class="row g-3">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-3">
                        <div class="card h-100 border-info shadow-sm text-center p-3">
                            <h5 class="card-title">@service.ServiceName</h5>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>कृषि सेवा उपलब्ध छैन</p>
        }

        <!-- Video Gallery -->
        <h2 class="mb-3 mt-5">Video Galleries</h2>
        @if (Model.VideoGalleries != null && Model.VideoGalleries.Any())
        {
            <div class="row g-3">
                @foreach (var video in Model.VideoGalleries)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@video.Title</h5>
                                @if (!string.IsNullOrEmpty(video.YoutubeURL))
                                {
                                    <a href="@video.YoutubeURL" target="_blank" class="btn btn-primary mb-2">Watch on YouTube</a>
                                }
                                @if (!string.IsNullOrEmpty(video.FilePath))
                                {
                                    <video width="100%" controls>
                                        <source src="@(_global.BaseUrl() + video.FilePath)" type="video/mp4" />
                                        Your browser does not support the video tag.
                                    </video>
                                }
                                else
                                {
                                    <span>No video available</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No videos found.</p>
        }

        <!-- Image Gallery -->
        <h2 class="mb-3 mt-5">Image Galleries</h2>
        @if (Model.ImageGalleries != null && Model.ImageGalleries.Any())
        {
            <div class="row g-3">
                @foreach (var image in Model.ImageGalleries)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm">
                            <img src="@(_global.BaseUrl() + image.FilePath)" class="card-img-top rounded" alt="@image.Title" />
                            <div class="card-body text-center">
                                <h6 class="card-title">@image.Title</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No images found.</p>
        }

    </section>

    <section class="main-feature mt-5 pt-5">
        <div class="container krishi-feature">
            <div class="">
                <h2>Explore Key Features & Services</h2>
                <div class="row mt-5">
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-seedling" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Farming Guidelines</h3>
                            <p>Access best practices for improved yields.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-wheat-awn" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Cooperative Farming</h3>
                            <p>Collaborate for better resource management.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-money-bill" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Financial Assistance</h3>
                            <p>Find schemes and loans for your needs.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <i class="fa-solid fa-cart-shopping" style="color: green; font-size: 40px;"></i>
                        <div class="feature-desc">
                            <h3>Market Access</h3>
                            <p>Connect with buyers and sell your produce.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="mt-5">
        <div class="bg-footer">
            <p>© 2025 Krishi. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
