            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1.2rem 0;
            font-size: 0.95rem;
            color: #555;
        }

            .options label {
                display: flex;
                align-items: center;
                gap: 5px;
            }

            .options .form-check {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

        .form-box button {
            width: 100%;
            margin-top: 25px;
            padding: 1rem;
            background: #2e7d32;
            color: #fff;
            font-size: 1.05rem;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-box button:hover {
                background: #5760d4;
                transform: scale(1.03);
            }

        .form-box p {
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .form-box p a {
                color: #6B73FF;
                text-decoration: none;
                font-weight: 500;
            }

                .form-box p a:hover {
                    text-decoration: underline;
                }

        .right {
            flex: 1;
            background: linear-gradient(rgba(26, 92, 56, 0.5), rgba(30, 70, 40, 0.7)), url('https://codervent.com/rocker/demo/vertical/assets/images/login-images/login-cover.svg') center/cover no-repeat;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            text-align: center;
        }

        .right h3 {
            font-size: 1.9rem;
            margin-bottom: 1rem;
            color: #fff;
            text-shadow: 0 2px 8px rgba(0,0,0,0.5);
        }

        .right h6 {
            font-size: 1.05rem;
            line-height: 1.6;
            opacity: 0.95;
        }
        

       

        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
                margin: 1rem;
            }

            .form-box,
            .right {
                padding: 2.5rem 1.8rem;
            }

            .right {
                order: -1;
                min-height: 320px;
            }

            .form-box h1 {
                font-size: 1.8rem;
            }
        }

        @@media (max-width: 480px) {
            .form-box

        {
            padding: 2rem 1.4rem;
        }

        }
