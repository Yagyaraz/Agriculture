    <!-- Login Container -->
    <div class="container">
        <div class="form-box">
            <h1>लगइन गर्नुहोस्</h1>
            <form asp-action="Index">
                <label for="username">प्रयोगकर्ताको इमेल लेखनुहोस्</label>
                <input asp-for="Username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@gmail.com" required />

