@{
    ViewData["Title"] = "UserView";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
   
}
@* 
<div class="cards-container">
    <div class="card" style="background: #E8F5E9;">
        <h3>Total Land Area</h3>
        <div class="value">12,000 square meters (m²)</div>
    </div>
    <div class="card" style="background: #F1F8E9;">
        <h3>Crops Planted</h3>
        <div class="value">3 Crops</div>
    </div>
    <div class="card" style="background: #F9FBE7;">
        <h3>Harvest Yield</h3>
        <div class="value">85% Target</div>
        <div class="progress-bar">
            <div class="progress"></div>
        </div>
    </div>
    <div class="card" style="background: #FFF8E1;">
        <h3>Soil Moisture</h3>
        <div class="value">62% Optimal</div>
    </div>
</div>

<div class="weather-widget">
    <h2>Current Weather</h2>
    <div class="weather-info">
        <div class="temp">🌤️ 28°C</div>
        <div class="precipitation">💧 20% Precipitation</div>
        <div class="forecast">📅 7-Day Forecast Available</div>
    </div>
</div>

<div class="crop-health">
    <div class="card">
        <h2>Crop Health Status</h2>
        <div class="health-item">
            <div class="crop-name">Wheat <span class="status good">Good</span></div>
            <div class="progress-bar">
                <div class="progress" style="width: 85%;"></div>
            </div>
        </div>
        <!-- Add more crop health items -->
    </div>

    <div class="card">
        <h2>Quick Actions</h2>
        <button class="btn"><i class="fas fa-plus"></i> Add Crop</button>
        <button class="btn"><i class="fas fa-tint"></i> Schedule Irrigation</button>
        <button class="btn"><i class="fas fa-clipboard-list"></i> Create Report</button>
    </div>
</div>

<div class="recent-activity card">
    <h2>Recent Activities</h2>
    <ul>
        <li>🕒 2h ago: Irrigation completed in Field B</li>
        <li>🕒 4h ago: Pest control applied to Wheat crops</li>
        <li>🕒 1d ago: Harvest started in Field C</li>
    </ul>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
